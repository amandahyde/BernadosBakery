@model BernadosBakery.Models.Reservation
@using BernadosBakery.Operations;
@{
    ViewData["Title"] = "Create";
}
<section>
    <h4>Guests</h4>


    <h2>Create</h2>

    <h4>Reservation</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="GuestId" class="control-label"></label>
                    <input asp-for="GuestId" class="form-control" readonly="readonly" value="@DatabaseManager.GuestID" />
                    <span asp-validation-for="GuestId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateTime" class="control-label"></label>
                    <input asp-for="DateTime" value="@DateTime.Now.ToString("dd/MM/yyyy hh:mm")" data-date-format="dd/mm/yyyy hh:mm" class="form-control" />
                    <span asp-validation-for="DateTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NumGuests" class="control-label"></label>
                    <input type="number" min="1" max="12" asp-for="NumGuests" class="form-control" required/>
                    <span asp-validation-for="NumGuests" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SeatingType" class="control-label"></label>
                    <select asp-for="SeatingType" class="form-control">

                        <option value="Indoor">Indoor</option>
                        <option value="Outdoor">Outdoor</option>


                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</section>
